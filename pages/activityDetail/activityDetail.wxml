<view class="weui-cells__title">{{activity.title}}</view>
<view class="weui-cells weui-cells_form">
  <view class="weui-cell">
    <image class="activity-detail-image" src="{{activity.imageUrl}}" mode="aspectFill" />
  </view>
  <view class="weui-cell weui-cell_access">
    <view class="weui-cell__bd">
      <view class="activity-detail-title">{{activity.title}}</view>
      <view class="activity-detail-meta">
        <text>📍 {{activity.location}}</text>
        <text>💰 {{activity.price}}</text>
        <text>🏷️ {{activity.tags.join(' ')}}</text>
        <text>👥 参与人数: {{activity.participants}}</text>
      </view>
    </view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd activity-detail-description">
      <text>{{activity.description}}</text>
    </view>
  </view>
</view>