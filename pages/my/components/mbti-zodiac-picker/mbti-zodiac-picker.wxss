picker-view {
  height: 500rpx;
}
picker-view-column {
  height: 500rpx;
}
.personality-modal {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.personality-back {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 888;
  transition: all 0.2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}

.personality-back.active {
  opacity: 1;
  visibility: visible;
}

.personality-content {
  width: 100%;
  background: #fff;
  border-radius: 40rpx 40rpx 0px 0px;
  position: fixed;
  bottom: 0;
  z-index: 999;
  overflow: hidden;
  transform: translate3d(0, 100%, 0);
  transition: all 0.2s ease-in-out;
  visibility: hidden;
  justify-content: center;
}

.personality-content.active {
  transform: translate3d(0, 0, 0);
  visibility: visible;
}

.personality-modal-header {
  width: 100%;
  height: 110rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.personality-list-title {
  font-size: 36rpx;
  color: #101d37;
  font-weight: 500;
}

.personality-list-subtitle {
  font-size: 30rpx;
  margin-right: 50px;
  margin-left: 50px;
  color: #101d37;
  display: flex;
  justify-content: space-between;
  font-weight: 500;
  text-align: center;
}

.personality-btns {
  width: 90%;
  position: absolute;
  height: 110rpx;
  display: flex;
  top: 0;
  left: 0;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  color: #838d99;
}

.personality-btns text:nth-of-type(2) {
  color: #1aad19;
}
