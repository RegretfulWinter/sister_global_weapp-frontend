.profile-page {
  background-color: #F7F7F7;
  padding: 10px;
}

.profile-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 0;
}

.back-button {
  font-size: 18px;
  color: #333;
  cursor: pointer;
}

.profile-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
}

.profile-info {
  margin-bottom: 20px;
}

.avatar-image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}

.profile-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.cell-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.cell-content {
  font-size: 14px;
  color: #666;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.add-tag {
  margin-left: 10px;
}

.view-more {
  color: #1AAD19;
  font-size: 14px;
  margin-top: 10px;
}