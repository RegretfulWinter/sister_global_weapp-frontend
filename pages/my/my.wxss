.profile-page {
  background-color: #fde0c9;
  padding: 20px;
  min-height: 100vh;
  box-sizing: border-box;
}

.profile-header {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 10px 0;
}

.back-button {
  position: absolute;
  left: 10px;
  font-size: 18px;
  color: #333;
  cursor: pointer;
}

.profile-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.profile-info {
  background-color: #faf3ec;
  border-radius: 12px;
  padding: 20px;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar-image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 15px;
}

.profile-name {
  font-size: 20px;
  font-weight: bold;
  color: #29374d;
}

.weui-cell {
  background-color: #faf3ec;
  border-radius: 12px;
  margin-bottom: 15px;
  padding: 15px;
}

.weui-cell::before {
  content: none; /* Disables the ::before pseudo-element */
}

.cell-title {
  font-size: 16px;
  font-weight: bold;
  color: #29374d;
  margin-bottom: 8px;
}

.cell-content {
  font-size: 14px;
  color: #666;
}

.tags {
}

.tag {
  margin-right: 8px;
  margin-bottom: 8px;
  color: #29374d;
  background-color: #ffb578;
}

.add-tag {
  border: 2px dashed #666;
  color: #666;
  margin-left: 10px;
}

.view-more {
  color: #1aad19;
  font-size: 14px;
  margin-top: 10px;
  text-align: right;
}

.cancel-btn {
  color: #888;
  font-size: 16px;
}

.cell-content {
  font-size: 16px;
  color: #333;
}
